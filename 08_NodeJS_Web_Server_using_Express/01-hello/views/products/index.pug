extends ../layouts/common

block content
    h1 Products
    .d-flex.align-items-center
        form.ms-auto(action='/users/search', method='GET', class="d-flex")
            input(type='text', name='q', id="input-field", class="form-control")
            button(class="btn btn-primary ms-2") Search
    
    nav(aria-label='...')
        ul.pagination
            li.page-item.disabled
            a.page-link(href='/products/?page=' + prevPage) Previous
            li.page-item
            a.page-link(href='/products/?page=' + prevPage) #{prevPage}
            li.page-item.active(aria-current='page')
            a.page-link(href='/products/?page=' + page)
                | #{page}
                span.sr-only (current)
            li.page-item
            a.page-link(href='/products/?page=' + nextPage) #{nextPage}
            li.page-item
            a.page-link(href='/products/?page=' + nextPage) Next

    .row
        each product in products
            .col-sm-6.col-md-4.col-lg-3
                .card.mb-3
                    img.card-img-top(src= product.image)
                    .card-body
                        h5.card-title= product.name
                        p.card-text= product.description
                        a.btn.btn-primary(href='/cart/add/' + product.id) Add to cart


